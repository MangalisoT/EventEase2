@model Event_Ease.Models.VenueLocationViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Venues" asp-action="Index" method="get">
    <p>
        <label>
            Venue Name:
            <input type="text" name="searchString" value="@Model.SearchString" />
        </label>
        <label>
            Venue Location:
            <input type="text" name="venueLocation" value="@Model.VenueLocation" />
        </label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venues.FirstOrDefault().VenueName)  
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venues.FirstOrDefault().VenueLocation)  
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venues.FirstOrDefault().VenueCapacity) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venues.FirstOrDefault().VenueImage) 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Venues != null && Model.Venues.Any()) 
        {
            @foreach (var item in Model.Venues)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VenueName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VenueLocation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VenueCapacity)
                    </td>
                    <td>
                        @if (item.Venue_ID == 1)
                        {
                            <img src="https://images.unsplash.com/photo-1721677156302-4285b7ecd5cc?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                 alt="Venue 1 Image" width="100" height="100" style="object-fit: cover;" />
                        }
                        else if (item.Venue_ID == 2)
                        {
                            <img src="https://images.unsplash.com/photo-1664191401117-f399706b5bbf?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                 alt="Venue 2 Image" width="100" height="100" style="object-fit: cover;" />
                        }
                        else if (item.Venue_ID == 3)
                        {
                            <img src="https://images.unsplash.com/photo-1655304672473-1a4d4af4774a?q=80&w=1935&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                 alt="Venue 3 Image" width="100" height="100" style="object-fit: cover;" />
                        }
                        else
                        {
                            <span>No Image Available</span>
                        }
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Venue_ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Venue_ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Venue_ID">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5">No venues found.</td></tr>  
        }
    </tbody>
</table>
